import { serve } from "https://deno.land/std@0.168.0/http/server.ts"
import { createClient } from 'https://esm.sh/@supabase/supabase-js@2'

const corsHeaders = {
  'Access-Control-Allow-Origin': '*',
  'Access-Control-Allow-Headers': 'authorization, x-client-info, apikey, content-type',
}

serve(async (req) => {
  // Handle CORS preflight requests
  if (req.method === 'OPTIONS') {
    return new Response('ok', { headers: corsHeaders })
  }

  try {
    const supabaseClient = createClient(
      Deno.env.get('SUPABASE_URL') ?? '',
      Deno.env.get('SUPABASE_ANON_KEY') ?? '',
    )

    // Get the authorization header from the request
    const authHeader = req.headers.get('Authorization')!
    
    // Verify the user is authenticated
    const token = authHeader.replace('Bearer ', '')
    const { data: { user }, error: authError } = await supabaseClient.auth.getUser(token)

    if (authError || !user) {
      return new Response(
        JSON.stringify({ error: 'Unauthorized' }),
        { 
          status: 401, 
          headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
        }
      )
    }

    const { method, image_data, upload_id, user_id } = await req.json()
    
    const apiKey = Deno.env.get('CUBICASA_API_KEY')
    if (!apiKey) {
      return new Response(
        JSON.stringify({ error: 'CubiCasa API key not configured' }),
        { 
          status: 500, 
          headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
        }
      )
    }

    if (method === 'upload_image') {
      return await handleImageUpload(req, apiKey, user_id)
    } else if (method === 'get_floor_plan') {
      return await getFloorPlan(req, apiKey)
    } else {
      return new Response(
        JSON.stringify({ error: 'Invalid method' }),
        { 
          status: 400, 
          headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
        }
      )
    }

  } catch (error) {
    console.error('Error:', error)
    return new Response(
      JSON.stringify({ error: 'Internal server error' }),
      { 
        status: 500, 
        headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
      }
    )
  }
})

async function handleImageUpload(req: Request, apiKey: string, userId: string) {
  try {
    const { image_data } = await req.json()
    
    // Convert base64 to blob
    const imageBuffer = Uint8Array.from(atob(image_data), c => c.charCodeAt(0))
    
    // Create form data for CubiCasa API
    const formData = new FormData()
    formData.append('image', new Blob([imageBuffer], { type: 'image/jpeg' }), 'floor_plan.jpg')
    formData.append('user_id', userId)
    
    // Upload to CubiCasa
    const cubicasaResponse = await fetch('https://api.cubicasa.com/v1/upload', {
      method: 'POST',
      headers: {
        'Authorization': `Bearer ${apiKey}`,
      },
      body: formData
    })

    if (!cubicasaResponse.ok) {
      throw new Error(`CubiCasa API error: ${cubicasaResponse.statusText}`)
    }

    const result = await cubicasaResponse.json()
    
    return new Response(
      JSON.stringify({
        success: true,
        upload_id: result.upload_id,
        status: result.status
      }),
      { 
        status: 200, 
        headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
      }
    )

  } catch (error) {
    console.error('Upload error:', error)
    return new Response(
      JSON.stringify({ error: error.message }),
      { 
        status: 500, 
        headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
      }
    )
  }
}

async function getFloorPlan(req: Request, apiKey: string) {
  try {
    const { upload_id } = await req.json()
    
    // Get floor plan status from CubiCasa
    const cubicasaResponse = await fetch(`https://api.cubicasa.com/v1/floor_plan/${upload_id}`, {
      method: 'GET',
      headers: {
        'Authorization': `Bearer ${apiKey}`,
        'Content-Type': 'application/json',
      }
    })

    if (!cubicasaResponse.ok) {
      throw new Error(`CubiCasa API error: ${cubicasaResponse.statusText}`)
    }

    const result = await cubicasaResponse.json()
    
    return new Response(
      JSON.stringify({
        success: true,
        status: result.status,
        floor_plan_url: result.floor_plan_url,
        dimensions: result.dimensions,
        rooms: result.rooms
      }),
      { 
        status: 200, 
        headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
      }
    )

  } catch (error) {
    console.error('Get floor plan error:', error)
    return new Response(
      JSON.stringify({ error: error.message }),
      { 
        status: 500, 
        headers: { ...corsHeaders, 'Content-Type': 'application/json' } 
      }
    )
  }
}